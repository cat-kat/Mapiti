<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="80dp"

   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/play"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_height="wrap_content"

        android:text="Привет! Спасибо, что выбрали наше приложение.  "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/play"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:paddingVertical="15dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="В скором времени по подписке будут доступны новые возможности: хронология граффити, подписка на выбранных художников, возможность задать им вопросы прямо из приложения! "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/play"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_height="200dp"
        android:text=" А пока подписывайтесь на нас в социальных сетях, чтобы первыми узнавать обо всех обновлениях. "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/instaButton"
            android:onClick="onClickInstaButton"
            android:layout_width="50dp"
            android:layout_margin="30dp"
            android:layout_height="50dp"
            android:background="@drawable/instagram"/>
        <Button
            android:id="@+id/tiktokButton"
            android:onClick="onClickTiktokButton"
            android:layout_width="50dp"
            android:layout_margin="30dp"
            android:layout_height="50dp"
            android:background="@drawable/tiktok"/>
        <Button
            android:id="@+id/twitterButton"
            android:onClick="onClickTwitterButton"
            android:layout_width="50dp"
            android:layout_margin="30dp"
            android:layout_height="50dp"
            android:background="@drawable/twitter"/>
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>